<?xml version="1.0" encoding="UTF-8" ?>
<precice-configuration dimensions="2" experimental="true">
  <data:scalar name="ScalarData" />

  <global-data:scalar name="GlobalScalarData" />
  <global-data:vector name="GlobalVectorData" />

  <mesh name="MeshTwo">
    <use-data name="ScalarData" />
  </mesh>

  <participant name="SolverOne">
    <receive-mesh name="MeshTwo" from="SolverTwo" direct-access="true" />
    <write-data name="GlobalScalarData" />
    <write-data name="GlobalVectorData" />
    <write-data name="ScalarData" mesh="MeshTwo" />
  </participant>

  <participant name="SolverTwo">
    <provide-mesh name="MeshTwo" />
    <read-data name="GlobalScalarData" />
    <read-data name="GlobalVectorData" />
    <read-data name="ScalarData" mesh="MeshTwo" />
  </participant>

  <m2n:sockets acceptor="SolverOne" connector="SolverTwo" />

  <coupling-scheme:serial-explicit>
    <participants first="SolverOne" second="SolverTwo" />
    <max-time-windows value="2" />
    <time-window-size value="1.0" />
    <exchange data="ScalarData" mesh="MeshTwo" from="SolverOne" to="SolverTwo" />
    <exchange data="GlobalScalarData" from="SolverOne" to="SolverTwo" />
    <exchange data="GlobalVectorData" from="SolverOne" to="SolverTwo" />
  </coupling-scheme:serial-explicit>
</precice-configuration>
